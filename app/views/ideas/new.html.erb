 <main>
  <div class="content-wrapper">
    <h1>Create new idea</h1>

      <%= form_tag(ideas_create_path, method: 'POST', class: 'global-search') do %>
      <div class="input-group input-group--horizontal">
        <label class="input-group__label" for="title">Title</label>
        <%= text_field_tag('title', nil, class: 'input-group__field', placeholder: 'E.g. Ride a camel' )  %>
      </div>
      <div class="input-group input-group--horizontal">
        <label class="input-group__label" for="done_count">Title</label>
        <%= text_field_tag('done_count', nil, class: 'input-group__field', placeholder: 'done_count' )  %>
      </div>
      <div class="prompt">
        <a class="prompt__cancel" href="#cancel">Cancel</a>
        <%= button_tag('Create', class: 'btn btn--primary prompt__confirm')  %>

      </div>
    <% end %>
  </div>
</main>
